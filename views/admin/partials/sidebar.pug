.d-flex.flex-column.bg-dark.text-white.position-fixed.vh-100(style="width: 250px; top: 56px; left: 0; z-index: 1000;")
  .flex-grow-1.overflow-auto.py-3
    //- Dashboard Section
    .px-3.mb-3
      small.text-uppercase.text-muted.fw-bold TỔNG QUAN
    
    a.d-flex.align-items-center.text-white.text-decoration-none.px-3.py-2.mb-1(
      href=`${prefixAdmin}/dashboard`
      class="hover-bg-light"
    )
      i.bi.bi-speedometer2.me-3
      | Dashboard
    
    //- Management Section
    .px-3.mb-2.mt-3
      small.text-uppercase.text-muted.fw-bold QUẢN LÝ
    
    if role.permissions.includes("products_view")
      a.d-flex.align-items-center.text-white.text-decoration-none.px-3.py-2.mb-1(
        href=`${prefixAdmin}/products`
        class="hover-bg-light"
      )
        i.bi.bi-box-seam.me-3
        | Sản phẩm
    
    if role.permissions.includes("products-category_view")
      a.d-flex.align-items-center.text-white.text-decoration-none.px-3.py-2.mb-1(
        href=`${prefixAdmin}/product-category`
        class="hover-bg-light"
      )
        i.bi.bi-list-ul.me-3
        | Danh mục sản phẩm
    if role.permissions.includes("posts_view")
      a.d-flex.align-items-center.text-white.text-decoration-none.px-3.py-2.mb-1(
        href=`${prefixAdmin}/posts`
        class="hover-bg-light"
      )
        i.bi.bi-file-earmark-richtext.me-3
        | Bài đăng
    
    if role.permissions.includes("posts-category_view")
      a.d-flex.align-items-center.text-white.text-decoration-none.px-3.py-2.mb-1(
        href=`${prefixAdmin}/post-category`
        class="hover-bg-light"
      )
        i.bi.bi-tags-fill.me-3
        | Danh mục bài đăng
    if role.permissions.includes("roles_view")
      a.d-flex.align-items-center.text-white.text-decoration-none.px-3.py-2.mb-1(
        href=`${prefixAdmin}/roles`
        class="hover-bg-light"
      )
        i.bi.bi-shield-lock.me-3
        | Vai trò
    if role.permissions.includes("roles_permissions")
      a.d-flex.align-items-center.text-white.text-decoration-none.px-3.py-2.mb-1(
        href=`${prefixAdmin}/roles/permission`
        class="hover-bg-light"
      )
        i.bi.bi-key.me-3
        | Phân quyền
    
    a.d-flex.align-items-center.text-white.text-decoration-none.px-3.py-2.mb-1(
      href=`${prefixAdmin}/orders`
      class="hover-bg-light"
    )
      i.bi.bi-cart-check.me-3
      | Đơn hàng
    if role.permissions.includes("accounts_view")
      a.d-flex.align-items-center.text-white.text-decoration-none.px-3.py-2.mb-1(
        href=`${prefixAdmin}/accounts`
        class="hover-bg-light"
      )
        i.bi.bi-people.me-3
        | Người dùng
    
    //- System Section
    .px-3.mb-2.mt-3
      small.text-uppercase.text-muted.fw-bold HỆ THỐNG
    if role.permissions.includes("settings_view")
      a.d-flex.align-items-center.text-white.text-decoration-none.px-3.py-2.mb-1(
        href=`${prefixAdmin}/settings`
        class="hover-bg-light"
      )
        i.bi.bi-gear.me-3
        | Cài đặt