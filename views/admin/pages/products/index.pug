extends ../../layout/default
include ../../mixins/box-head.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-multi-action.pug

block main
  +box-head("Danh Sách Sản Phẩm")
  .card.mb-3
    .card-header Bộ lọc và tìm kiếm
    .card-body
      .row 
        .col-8
          +filterStatus(status)
        .col-4 
          +search(keyword)


  .card.mb-3 
    .card-header Danh Sách 
    .card-body
      .row 
        .col-2 
          +form-multi-action(`${prefixAdmin}/products/change-multi?_method=PATCH`)
      table.table.table-hover(checkbox-multi)
        thead 
          tr
            th 
              input(class="form-check-input" type="checkbox" value="" name="check-change-all")
            th STT 
            th Hình ảnh
            th Tiêu đề 
            th Giá
            th Trạng thái
            th Hoạt động
        tbody
          each item, index in listProduct
            tr
              td
                input(class="form-check-input" type="checkbox" value=item._id name="check-change") 
              td #{index+1}
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="auto"
                  class="border "
                )
              td #{item.title}
              td #{item.price}
              td
                button(
                  class=`badge btn ${
                    item.availabilityStatus === "In Stock" ? "btn-success" : "btn-danger"
                  }`
                  data-status=item.availabilityStatus
                  data-id=item._id
                  btn-change-status
                ) #{item.availabilityStatus}

              td
                button.btn.btn-warning edit
                button.btn.btn-danger.ms-2 delete
  +pagination(pagination)

  form(
    action=""
    method="POST"
    id="form-change-status"
    data-path=`${prefixAdmin}/products/change-status`
  )  
  
  script(src="/admin/js/product.js")