mixin sub-menu(data, path)
  ul.sub-menu
    each item in data
      - const hasChildren = item.children && item.children.length > 0
      li.menu-item
        .d-flex.justify-content-between.align-items-center.pe-2
          a(
            href=`${path}/${item.slug}`
          ) #{item.title}
          if hasChildren
            i.bi.bi-caret-right-fill
        
        if hasChildren
          +sub-menu(item.children, path)